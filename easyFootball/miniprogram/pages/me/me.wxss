}

@keyframes flick {
  0% {
    opacity: 1;

  }

  25% {
    opacity: 0.7;

  }

  50% {
    opacity: 0.3;

  }

  75% {
    opacity: 0.7;

  }

  100% {
    opacity: 1.0;

  }
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
