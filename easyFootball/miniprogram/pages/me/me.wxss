}

.usermotto {
  text-decoration-line: underline;
  position: fixed;
  font-family: 'LiDeBiao-Xing3';
  margin-top: 240px;
  animation-name: none;
  font-size: 120rpx;
  margin-left: -100rpx;
  animation-duration: 2s;
  animation-iteration-count: infinite;
  animation-direction: alternate;
  animation-name: flick;
  animation-timing-function: linear;
}

