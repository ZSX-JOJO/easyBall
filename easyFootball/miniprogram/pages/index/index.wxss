.peoplesign {
  padding: 120rpx 5rpx 5rpx 20rpx;
  display: flex;
  flex-grow: 1;
  flex-shrink: none;
  justify-content: space-around;
  align-content: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
  height: 360rpx;
  width: 580rpx;
}

.nameButton {

  display: flex;
  flex-direction: row;
  flex-shrink: 0;
  width: 210rpx;
  height: 75rpx;
  margin-left: 8rpx;


}

.more {
  display: inline;
  flex-direction: row;
  flex-shrink: none;

  height: 200rpx;
  width: 660rpx;


}

.more button {
  width: 80%;
  background-color: rgba(197, 241, 197, 0.5);
}

.more text {
  margin-left: 30rpx;
}

.moreon>image:nth-child(1) {

  height: 90rpx;
  width: 90rpx;
  flex: none;
  margin-left: 280rpx;
  animation: moreunfoldleft 0.4s ease-in;
  animation-fill-mode: forwards;
  animation-timing-function: linear;


}

.moreon>image:nth-child(2) {

  height: 113rpx;
  width: 120rpx;
  flex: none;
  margin-left: -100rpx;
  animation: moreunfoldmid 0.4s ease-in;
  animation-fill-mode: forwards;
  animation-timing-function: linear;

}

.moreon>image:nth-child(3) {

  height: 90rpx;
  width: 90rpx;
  flex: none;
  margin-left: -100rpx;
  animation: moreunfoldright 0.4s ease-in;
  animation-fill-mode: forwards;
  animation-timing-function: linear;

}


@keyframes unfold {
  0% {
    height: 240rpx;
  }

  50% {
    height: 600rpx;
  }

  100% {
    height: 880rpx
  }
}


@keyframes fold {
  0% {
    height: 880rpx;
  }

  50% {
    height: 600rpx;
  }

  100% {
    height: 240rpx
  }
}

@keyframes foldmatchbox {
  0% {
    height: 880rpx;
  }

  50% {
    height: 640rpx;
  }

  100% {
    height: 560rpx
  }
}


@keyframes moreunfoldleft {
  0% {
    margin-left: 280rpx;
  }

  50% {
    margin-left: 180rpx;
  }

  100% {
    margin-left: 80rpx;
  }
}

@keyframes moreunfoldmid {
  0% {
    margin-left: -100rpx;
  }

  50% {
    margin-left: 0rpx;
  }

  100% {
    margin-left: 100rpx;
  }
}

@keyframes moreunfoldright {
  0% {
    margin-left: -100rpx;
  }

  50% {
    margin-left: 0rpx;
  }

  100% {
    margin-left: 100rpx;
  }
}

.on {
  animation: unfold 0.6s ease-in;
  animation-fill-mode: forwards;
  animation-timing-function: linear;
}

.off {
  animation: fold 0.4s ease-in;
  animation-fill-mode: forwards;
  animation-timing-function: linear;
}

.offmatchbox {
  animation: foldmatchbox 0.4s ease-in;
  animation-fill-mode: forwards;
  animation-timing-function: linear;
}


/* 评论部分 */

.comment {

  position: fixed;
  width: 660rpx;
  height: 0rpx;
  flex-shrink: none;
  flex-wrap: nowrap;
  flex-direction: column;
  border: solid;
  border-color: rgb(85, 190, 23);
  border-width: 8rpx 0rpx 0rpx 2.5rpx;
  box-shadow: #666 0px 0px 10px;
  border-radius: 30rpx;
  justify-content: center;
  align-items: center;
  display: none;
  margin-top: 100rpx;
  margin-left: -44%;
  animation: commentunfold 0.6s ease-in;
  animation-fill-mode: forwards;
  animation-timing-function: linear;
  padding-top: 12rpx;
}

@keyframes commentunfold {
  0% {
    height: 0rpx;
    display: flex;
  }

  50% {
    height: 200rpx;
  }

  100% {
    height: 600rpx;
  }
}